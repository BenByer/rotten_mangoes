<h1>Rotten Mangoes ADMIN</h1>

<%= paginate @users %>

<%= link_to "Back to all movies", movies_path %>
<br/>

<hr>
<% @users.each do |user| %>
  <%= user.id %> - User: 
  <strong><%= user.full_name %></strong><br>
  Email: <%= user.email %>
  Admin: <%= user.is_admin %>


  <%= button_to "Delete", admin_user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>


  <hr>
  <% end %>

